<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:ETS2LA.UI.Views"
             xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             x:Class="ETS2LA.UI.Views.GameView"
             x:DataType="views:GameView">
    <UserControl.Resources>
        <ItemsPanelTemplate x:Key="WrapPanelTemplate">
            <WrapPanel />
        </ItemsPanelTemplate>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
        <StackPanel>
            <ItemsControl x:Name="GameList" ItemsSource="{Binding Installations}" ItemsPanel="{StaticResource WrapPanelTemplate}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="views:GameItem">
                        <husk:Card 
                            Padding="14"
                            Margin="10"
                            Width="490"
                            HorizontalAlignment="Left"
                            Tag="{Binding}"
                            Classes.Highlight = "{Binding IsParsed}"
                            Cursor="Hand"
                        >
                            <StackPanel Spacing="6" Width="460">
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <husk:Tag Classes.Primary="{Binding IsParsed}">
                                        <TextBlock Text="{Binding Version}" FontSize="12" FontWeight="450" />
                                    </husk:Tag>
                                    <TextBlock Text="{Binding Game}" FontSize="14" />
                                </StackPanel>
                                <TextBlock Text="{Binding Path}" Classes="Description" FontSize="12" />
                                <TextBlock Text="已选择的地图模组:" FontSize="13" Margin="0,8,0,0" />
                                <TextBlock Text="使用 Ctrl+点击 选择多个模组。" FontSize="10" Classes="Description" Margin="0,0,0,4" />
                                <ListBox ItemsSource="{Binding Mods}" SelectedItems="{Binding SelectedMods}, Mode=TwoWay" SelectionMode="Multiple" />
                                <Button Margin="0,10,0,0" Command="{Binding ParseMapDataCommand}" IsEnabled="{Binding !IsParsed}">
                                    <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                        <i:Icon Value="fa-spinner" IsVisible="{Binding IsParsing}" Animation="Spin" />
                                        <TextBlock Text="解析地图数据" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </husk:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Border x:Name="PlaceholderPanel" Background="#16181D" BorderBrush="#2A2F37" BorderThickness="1" CornerRadius="12" Padding="14" IsVisible="False">
                <StackPanel Spacing="6">
                    <TextBlock Text="未找到安装" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="请通过 Steam 安装 ETS2 或 ATS，并且不要将文件夹移动到默认安装目录之外。" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
