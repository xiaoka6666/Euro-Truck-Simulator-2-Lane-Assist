<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:ETS2LA.UI.Views"
             xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             x:Class="ETS2LA.UI.Views.DashboardView"
             x:DataType="views:DashboardView">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="14">
            <!-- If someone can tell me how to do this without MaxWidth then please do so... -->
            <UniformGrid Columns="2" ColumnSpacing="14"
                MaxWidth="{Binding Extent.Width, RelativeSource={RelativeSource AncestorType=ScrollViewer}}">
                <husk:Card Padding="16">
                    <StackPanel Spacing="14">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock FontSize="18" FontFamily="{StaticResource Geist}">
                                欢迎回来，<Span Classes="Highlight">匿名用户</Span>！
                            </TextBlock>
                        </Grid>

                        <husk:Divider/>

                        <WrapPanel ItemSpacing="16">
                            <StackPanel Spacing="4">
                                <husk:Tag>
                                    <TextBlock Text="当前版本" FontSize="12" FontWeight="450" />
                                </husk:Tag>
                                <TextBlock Text="{Binding CurrentRelease}" FontSize="13" Margin="6 0 0 0"/>
                            </StackPanel>
                            <StackPanel Spacing="4">
                                <husk:Tag>
                                    <TextBlock Text="在线用户" FontSize="12" FontWeight="450" />
                                </husk:Tag>
                                <TextBlock Text="{Binding UsersOnline}" FontSize="13" Margin="6 0 0 0"/>
                            </StackPanel>
                            <StackPanel Spacing="4">
                                <husk:Tag>
                                    <TextBlock Text="24小时用户" FontSize="12" FontWeight="450" />
                                </husk:Tag>
                                <TextBlock Text="{Binding UsersOver24h}" FontSize="13" Margin="6 0 0 0"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </husk:Card>
                <husk:Card>
                    <Carousel Name="slides" >
                        <Carousel.PageTransition >
                            <CompositePageTransition>
                                <PageSlide Duration="0:00:00.500" Orientation="Horizontal" />
                            </CompositePageTransition>
                        </Carousel.PageTransition>
                        <Carousel.Items>
                            <TextBlock Text="" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Carousel.Items>
                    </Carousel>
                </husk:Card>
            </UniformGrid>

            <!-- Stats -->
            <UniformGrid Columns="3" ColumnSpacing="14"
                MaxWidth="{Binding Extent.Width, RelativeSource={RelativeSource AncestorType=ScrollViewer}}">
                <husk:Card>
                    <StackPanel Spacing="6">
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <i:Icon Value="fa-chart-line" FontSize="15" />
                            <TextBlock Text="会话" FontSize="16" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>
                        <TextBlock Text="123 总计 - 平均 4小时56分" Classes="Description" FontSize="13"/>
                    </StackPanel>
                </husk:Card>
                <husk:Card>
                    <StackPanel Spacing="6">
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <i:Icon Value="fa-clock" FontSize="15" />
                            <TextBlock Text="游戏时间" FontSize="16" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>
                        <TextBlock Text="123小时 45分 总计" Classes="Description" FontSize="13"/>
                    </StackPanel>
                </husk:Card>
                <husk:Card>
                    <StackPanel Spacing="6">
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <i:Icon Value="fa-heart-circle-bolt" FontSize="15" />
                            <TextBlock Text="稳定性" FontSize="16" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>
                        <TextBlock Text="过去24小时崩溃 1 次" Classes="Description" FontSize="13"/>
                    </StackPanel>
                </husk:Card>
            </UniformGrid>

            <UniformGrid Columns="2" ColumnSpacing="14"
                MaxWidth="{Binding Extent.Width, RelativeSource={RelativeSource AncestorType=ScrollViewer}}">
                <husk:Card>
                    <Grid RowDefinitions="Auto,*" RowSpacing="16">
                        <StackPanel Grid.Row="0" Spacing="4" VerticalAlignment="Top">
                            <TextBlock Text="支持 &amp; 更新" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock HorizontalAlignment="Stretch" Text="关注开发进度并获取支持。您也可以通过 Ko-Fi 为开发捐款，任何支持都非常感谢！" Classes="Description" FontSize="13"/>
                        </StackPanel>
                        <WrapPanel Grid.Row="1" ItemSpacing="8" VerticalAlignment="Bottom">
                            <Button Content="加入 Discord" />
                            <Button Content="打开 GitHub" />
                            <Button Content="Ko-Fi" Classes="Primary" />
                        </WrapPanel>
                    </Grid>
                </husk:Card>

                <husk:Card>
                </husk:Card>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
